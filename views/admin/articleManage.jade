extends ../layout

block content
    section.content
        include ./admin-left
        section.show-pannel
            p.page-title 文章管理
            div.article-oper
                div.artlist-head.arti
                    div.check-arti
                        p.tab-all
                            input(type="checkbox")
                    div.arti-cata
                        p 分类
                    div.arti-title
                        p 标题
                    div.arti-auth
                        p 作者
                    div.arti-pub
                        p 发布时间
                    div.arti-control
                        p 操作
                each val in artList
                    div.article-item.arti
                        input(type="hidden", value="#{val.id}", class="hide_id")
                        div.check-arti
                            p.tab
                                input(type="checkbox")
                        div.arti-cata
                            p=val.tip
                        div.arti-title
                            p=val.name
                        div.arti-auth
                            p=val.auth
                        div.arti-pub(format-data)
                            p=val.article_upDate
                        div.arti-control
                            p
                                i.iconfont.icon-lajitongshanchu.delete
                            p
                                i.iconfont.icon-xiugai.exchange
        div.del-pannel
            div.del-content
                p.del-info
                div.del-btn-box
                    span.del-btn.btn 删除
                    span.no-btn.btn 取消

    style.
        .del-pannel{
            position: fixed;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: 20;
            background: rgba(0, 0, 0, .4);
            display: none;
        }
        .del-content{
            position: absolute;
            top: 30%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 500px;
            height: 300px;
            background: linear-gradient(to bottom, #fff, #00B7FF, #dcdcdc, #000);
        }
        .del-content .del-info{
            height: 100px;
            line-height: 100px;
            width: calc(100% - 40px);
            margin-top: 30px;
            padding: 0 20px;
            color: #fff;
            font-size: 24px;
            text-align: center;
        }
        .del-btn-box {
            width: 100%;
            position: absolute;
            bottom: 10%;
            text-align: center;
        }
        .del-btn-box .btn {
            display: inline-block;
            width: 150px;
            height: 50px;
            line-height: 50px;
            border-radius: 5px;
            color: #fff;
            font-size: 24px;
        }
        .del-btn-box .btn:hover {
            cursor: pointer;
        }

        .del-btn-box .del-btn {
            background: coral;
            margin-right: 20px;
            box-shadow: 1px 1px 10px;
        }

        .del-btn-box .del-btn:hover{
            box-shadow: 1px 1px 10px red;
        }

        .del-btn-box .no-btn {
            background: #dcdcdc;
            box-shadow: 1px 1px 10px #000;
        }
        .del-btn-box .no-btn:hover{
            box-shadow: 1px 1px 10px #fff;
        }
        .page-title {
            height: 50px;
            line-height: 50px;
            padding-left: 20px;
            font-size: 24px;
            color: #888;
            box-shadow: 1px 0 10px;
            background: #fff;
        }
        .article-oper{
            width: calc(100% - 100px);
            margin: auto;
            margin-top: 120px;
            background: #fff;
        }
        .artlist-head{
            background-color: #f8d4bc;
        }
        .arti{
            display: flex;
        }
        .arti div{
            width: 10%;
            text-align: center;
            border-right: 1px solid #dcdcdc;
        }

        .arti .arti-title {
            width: 40%;
        }
        .arti div p{
            height: 40px;
            line-height: 40px;
            font-weight: bold;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            color: #585f69;
        }
        .tabed{
            background-color: cornflowerblue;
        }
        input[type="checkbox"]{
            width: 100%;
            height: 50%;
            margin-top: 10px;
        }
        .arti .arti-pub{
            width: 20%;
        }
        .arti .arti-control{
            display: flex;
            justify-content: center;
            border-color: transparent!important;
        }
        .arti-control p{
            flex: 0 0 40%;
            text-align: center;
        }
        .arti-control i:hover{
            cursor: pointer;
        }
    script.
        var items = 0;
        $('[format-data]').each(function(){
            var data = $(this).find('p').html();
            var date = new Date(data);
            var str = date.getFullYear() + '-' + (date.getMonth() + 1) + '-' + date.getDate();
            $(this).find('p').html(str);
        })
        $('.tab-all input').on('click', function(){
            if($(this).is(':checked')){
                $('.tab input').prop('checked', true);
                $('.tab input').parent().parent().parent().addClass('tabed');
            } else {
                $('.tab input').prop('checked', false);
                $('.tab input').parent().parent().parent().removeClass('tabed');
            }
        })
        $('.tab input').on('change', function(){
            if($(this).is(':checked')){
                $(this).parent().parent().parent().addClass('tabed');
            } else {
                $(this).parent().parent().parent().removeClass('tabed');
                $('.tab-all input').prop('checked', false);
            }
            if($(':checked').length === ($('input[type="checkbox"]').length - 1)){
                $('.tab-all input').prop('checked', true);
            }
        })
        $('.del-pannel').on('click', function(){
            $(this).fadeOut();
        })
        $('.delete').on('click', function(){
            var arti_id = $(this).parent().parent().parent().find('.hide_id').val();
            var arti_name = $(this).parent().parent().parent().find('.arti-title p').html();
            $('.del-pannel .del-content .del-info').html('确定删除 ' + arti_name + ' 吗？');
            $('.del-pannel').fadeIn();
        })