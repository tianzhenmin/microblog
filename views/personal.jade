extends layout

block content
    section.content
        -if(user)
            h1 你好 #{user}
            div.up-info
                span 录入文章
                p
                    input(name="arti-title", id="arti-title", placeholder="文章标题")
                p
                    select.tip-select
                        option(value="")
                        each val in listTip
                            option(value="#{val.tip}")=val.tip
                    或者
                    input(name="arti-tip", id="arti-tip", placeholder="新增文章标签")
                p
                    input(name="arti-desc", id="arti-desc", placeholder="文章概要")
                input(name="arti-content", id="arti-content", placeholder="文章正文")
                input(name="arti-auth", id="arti-auth", type="hidden", value="#{user}")
                div#editor
                p
                    span.submit-info 提交
            div.personal-info.personal
                p.upbtn 个人信息
                    span.triangle-right
            div.personal-info1.personal
                p.upbtn 文章管理
                    span.triangle-right
            div.personal-info2.personal
                p.upbtn 标签管理
                    span.triangle-right
        -else
            p(style="text-align:center;") 未登录,
                span.pop.login 点击登录
    script(src="/wangeditor/release/wangEditor.min.js")
    script(src="/javascripts/personal.js")

    style.
        .personal-info,.personal-info1,.personal-info2{
            position: fixed;
            right: 0;
            transform: translate(100%, -50%) rotate(45deg);
            transform-origin: 0 100%;
            transition: all 1s ease;
            width: 300px;
            height: 400px;
            border-radius: 10px 0 0 10px;
        }
        .personal-info{
            top: 50%;
            background: lightpink;
        }
        .personal-info1 {
            top: 40%;
            background: olivedrab;
        }
        .personal-info2 {
            top: 30%;
            background: #ff6600;
        }
        .personal-info:hover{
            transform: translate(0, -50%) rotate(0);
            bottom: 0;
            z-index: 1;
        }

        .personal-info1:hover {
            transform: translate(0, -50%) rotate(0);
            z-index: 1;
        }
        .personal-info2:hover {
            transform: translate(0, -50%) rotate(0);
            z-index: 1;
        }
        .personal:hover >.upbtn{
            transform: translate(-50%, 100%) rotate(0);
            bottom: calc(100% - 10px);
            left: 50%;
            font-size: 24px;
            margin-top: 10px;
        }

        .personal-info2 {
            top: 30%;
            background: #ff6600;
        }
        .upbtn{
            border-radius: 10px;
            position: absolute;
            height: 60px;
            width: 100px;
            transition: all 1s ease;
            line-height: 60px;
            font-size: 18px;
            color: #fff;
            text-align: center;
            bottom: -50px;
            left: 0;
            transform: rotate(-45deg) translate(-100%, -100%);
        }

        @keyframes shake {
            0%, 100% {
                transform: translateX(0);
            }
            10%, 30%, 50%, 70%, 90% {
                transform: translateX(-10px);
            }
            20%, 40%, 60%, 80% {
                transform: translateX(10px);
            }
        }
        .triangle-right {
            position: absolute;
            top: 50%;
            right: 0;
            transform: translate(100%, -50%);
            width: 0;
            height: 0;
            border-top: 12px solid transparent;
            border-bottom: 12px solid transparent;
        }
        .personal-info .upbtn{background: lightpink;}
        .personal-info1 .upbtn{background: olivedrab;}
        .personal-info2 .upbtn{background: #ff6600;}
        .personal-info .triangle-right{border-left: 24px solid lightpink;}
        .personal-info1 .triangle-right {border-left: 24px solid olivedrab;}
        .personal-info2 .triangle-right {border-left: 24px solid #ff6600;}
